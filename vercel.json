{
  "version": 2,
  "buildCommand": "npm install",
  "env": {
    "NODE_ENV": "production",
    "CHROMIUM_PATH": "/usr/bin/chromium"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 3008,
      "maxDuration": 300
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}